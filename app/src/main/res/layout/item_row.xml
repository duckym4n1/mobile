<!-- item_row_layout.xml -->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:id="@+id/mainLayout">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_marginTop="12dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="1"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/food_id_txt"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.045"
                    app:layout_constraintVertical_bias="0.271"/>
            <TextView
                    android:text="Name 1"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="187dp"
                    android:layout_height="38dp" android:id="@+id/food_name_txt"
                    app:layout_constraintStart_toEndOf="@+id/food_id_txt"
                    app:layout_constraintTop_toTopOf="@+id/food_id_txt" android:layout_marginStart="16dp"
            />
            <TextView
                    android:text="Recipe 1"
                    android:textSize="10sp"
                    android:textStyle="italic"
                    android:textColor="#000"
                    android:layout_width="187dp"
                    android:layout_height="18dp" android:id="@+id/food_recipe_txt"
                    app:layout_constraintTop_toBottomOf="@+id/food_name_txt"
                    app:layout_constraintStart_toStartOf="@+id/food_name_txt" android:layout_marginTop="10dp"
                    android:layout_marginStart="4dp"/>
            <TextView
                    android:text="Suggest 1"
                    android:layout_width="317dp"
                    android:layout_height="20dp" android:id="@+id/food_suggest_txt"
                    app:layout_constraintStart_toEndOf="@+id/food_id_txt" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/food_id_txt"/>
            <TextView
                    android:text="600k"
                    android:textStyle="bold"
                    android:textSize="40sp"
                    android:textColor="#000"
                    android:layout_width="102dp"
                    android:layout_height="67dp" android:id="@+id/food_calories_txt"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="12dp" android:layout_marginEnd="12dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
